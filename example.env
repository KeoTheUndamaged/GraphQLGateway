# Server Configuration
NODE_ENV=production
PORT=4000
SERVICE_NAME=graphql-gateway
SERVICE_VERSION=1.0.0
LOG_LEVEL=warn

# Security Configuration
CORS_ALLOWED_DOMAIN=yourdomain.com
ALLOW_BATCHED_REQUESTS=false
ENABLE_INTROSPECTION=false
ENABLE_GRAPHQL_PLAYGROUND=false

# Apollo Armor Security (ALL ENABLED IN PRODUCTION)
ENABLE_BLOCK_FIELD_SUGGESTION=true
ENABLE_COST_LIMIT=true
ENABLE_MAX_DEPTH=true
ENABLE_MAX_ALIASES=true
ENABLE_MAX_DIRECTIVES=true
ENABLE_MAX_TOKENS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX=100

# OpenTelemetry Observability
ENABLE_TRACES=true
ENABLE_METRICS=true
OTEL_EXPORTER_TRACE_OTLP_ENDPOINT=https://your-jaeger-endpoint:4318/v1/traces
OTEL_EXPORTER_METRIC_OTLP_ENDPOINT=https://your-prometheus-endpoint:4318/v1/metrics
OTEL_EXPORTER_OTLP_TRACE_HEADERS='{"Authorization":"Bearer your-api-key"}'
OTEL_EXPORTER_OTLP_METRIC_HEADERS='{"Authorization":"Bearer your-api-key"}'
OTEL_SAMPLING_RATE=0.1
OTEL_METRIC_EXPORT_INTERVAL=60000
OTEL_SERVICE_NAMESPACE=production